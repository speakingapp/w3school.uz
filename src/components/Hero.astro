import SearchBar from './SearchBar.astro'
---


<section class="hero-body flex items-center justify-center flex-col">

    <h1 class="hero-title text-center uppercase"><span class="bg-emerald-500 rounded p-2">Dasturlash</span> Olamiga <br>Xush Kelibsiz!</h1>
   
    <SearchBar/>

    <p class="flex items-center font-bold md:text-md  text-blue-300 my-3 hover:underline  cursor-pointer" style="transition: 1s;">Dasturlashga endi qadam qo'yganlar uchun <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
        <path stroke-linecap="round" stroke-linejoin="round" d="M17.25 8.25L21 12m0 0l-3.75 3.75M21 12H3" />
      </svg>
      </p>
    
<img src="/img/astro.png" class="astronaut">
</section>


<style lang="css">
    .hero-body{
        width: 100%;
        height: 100vh;
        background-image: url('/img/bg.gif');
        background-repeat: no-repeat;
        background-size: cover;
    }

    .astronaut{
        position: absolute;
        top:140px;
        right:50px;
        transition: 1s;
        transition-timing-function: ease;
        transform-origin: 0%;
        transform-style: flat;
        animation:updown 10s ease-in-out infinite;
        z-index: 1;
        
    }

    .hero-title{
        color: white;
        font-size: 60px;
        font-weight: bolder;
        font-family: sans-serif;
        text-wrap: wrap;
    }


    @media screen and (max-width:1250px) {
        .hero-title{
        font-size: 50px;
    }
}


@media screen and (max-width:1089px) {
        .hero-title{
        font-size: 40px;
    }
}

@media screen and (max-width:995px) {
        .hero-title{
        font-size: 30px;
    }
}

@media screen and (max-width:850px) {
        .hero-title{
        font-size: 45px;
    }

    .astronaut{
        display: none;
        position: fixed;
        top:140px;
        right:50px;
        transition: 1s;
        transition-timing-function: ease;
        transform-origin: 0%;
        transform-style: flat;
        animation:updown 10s ease-in-out infinite;
        z-index: 1;
    }
}


@media screen and (max-width:660px) {
        .hero-title{
        font-size: 45px;
    }
}


@media screen and (max-width:550px) {
        .hero-title{
        font-size: 30px;
    }
}

@media screen and (max-width:400px) {
        .hero-title{
        font-size: 20px;
    }
}

    @keyframes updown{
        0%{
            top:140px
        }

        50%{
            top:40px
        }

        100%{
            top:140px
        }
    }
</style>

