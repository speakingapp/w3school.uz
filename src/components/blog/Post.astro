---
import { Image } from "astro:assets";
import { getEntryBySlug, type CollectionEntry } from "astro:content";

type Props = {
blog: CollectionEntry<"blog">;
};

const {blog} = Astro.props
---

<article>
    <a href={`/blog/${blog.slug}`}>
        <Image
            src={blog.data.image}
            alt={blog.data.title}
            width={600}
            height={600 / 1.5}
            format="webp"
            class="rounded-2xl shadow-xl mb-6 aspect-thumbnail object-cover"
        />
    </a>

    <a
        href={`/blog/${blog.slug}`}
        
    >
        <p class="text-4xl text-zinc-900 dark:text-gray-50 mb-4 font-semibold inline-block">{blog.data.title}</p>
        <p class="text-zinc-500 dark:text-gray-50 text-2xl mb-9 line-clamp-2">
            {blog.body.slice(0,300)}
        </p>
    </a>

   
</article>